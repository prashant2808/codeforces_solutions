#include <iostream>
#include <vector>

using namespace std;

int main() {
    int n, x;
    cin >> n >> x;

    vector<int> arr(n);
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    vector<vector<int>> dp(n + 1, vector<int>(x + 1, 0));

    for (int i = 0; i <= n; i++) {
        dp[i][0] = 1;
    }

    for (int i = n - 1; i >= 0; i--) {
        for (int sum = 1; sum <= x; sum++) {
            int skip = dp[i + 1][sum];
            int pick = 0;
            if (arr[i] <= sum) {
                pick = dp[i][sum - arr[i]];
            }
            dp[i][sum] = (pick + skip) % 1000000007;
        }
    }

    cout << dp[0][x] << endl;

    return 0;
}
